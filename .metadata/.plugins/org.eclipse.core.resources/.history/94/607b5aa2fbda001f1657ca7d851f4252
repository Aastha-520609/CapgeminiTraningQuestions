import java.util.Scanner;
public class UserInterface {
	private String customerName;
	private int numOfAdults;
	private int numOfChildren;
	private int numOfDays;
	
	public UserInterface(String customerName, int numOfAdults, int numOfChildren, int numOfDays){
		this.customerName = customerName;
		this.numOfAdults = numOfAdults;
		this.numOfChildren = numOfChildren;
		this.numOfDays = numOfDays;
	}
	
	public String validateInput() {
		if(numOfAdults < 0) {
			return "Invalid input for number of adults";
		}
		
		if(numOfChildren < 0) {
			return "Invalid input for number of childrens";
		}
		
		if(numOfDays <= 0) {
			return "Invalid input for number of days";
		}
		
		return "Valid";
	}
	
	public int totalCost() {
		int adultCost = 1000;
		int childCost = 650;
		int result = (numOfAdults * adultCost + numOfChildren * childCost) * numOfDays;
		return result;
	}
	
	public void printDetails() {
		String validMessage = validateInput();
		if(!validMessage.equals("Valid")) {
		  System.out.println(validMessage);
		}
		else {
			int totalCost = totalCost();
			System.out.println(customerName + " your booking is confirmed and the total cost is " + totalCost);
		}
	}
	
    public static void main(String args[])
    {
      Scanner sc=new Scanner(System.in);
      System.out.println("Enter the customer details");
      String input = sc.nextLine();
      
      String[] details = input.split(":");
      
      String customerName = details[0];
      int numOfAdults = Integer.parseInt(details[1]);
      int numOfChildren = Integer.parseInt(details[2]);
      int numOfDays = Integer.parseInt(details[3]);
      
      UserInterface booking = new UserInterface(customerName, numOfAdults, numOfChildren, numOfDays);
      booking.printDetails();

    }

}
