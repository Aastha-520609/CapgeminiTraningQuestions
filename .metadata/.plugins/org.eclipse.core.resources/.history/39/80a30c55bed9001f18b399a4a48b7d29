import java.util.Scanner;
public class UserInterface {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		//Fill the code here 
		System.out.println("Enter the size of the array");
		int size = sc.nextInt();
		if(size % 2 == 0) {
			System.out.println("Please enter an odd number");
			return;
		}else if(size <= 0 || size > 10) {
			System.out.println("Please enter a valid number");
			return;
		}
		
		System.out.println("Enter the elements");
		int[] elements = new int[size];
		for(int i=0; i<elements.length; i++) {
			elements[i] = sc.nextInt();
			if(elements[i] <= 0 || elements[i] > 10) {
				System.out.println("Please enter valid elements in the array");
				return;
			}
		}
		
		int sum = 0;
		int product = 0;
		for(int i=0; i<elements.length; i++) {
			int midIndex = size / 2;
			int midValue = elements[midIndex];
			
			if(midValue % 2 == 0) {
				for(int j=0; j<midIndex; j++) {
					sum += elements[j];
				}
				
				for(int k=midIndex; k<elements.length; k++) {
					product += elements[k];
				}
			}
		}
		
		System.out.println("The sum of the values is " + sum);
		System.out.println("The product of the values is "+ product);
	}
}